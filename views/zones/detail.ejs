<%- include('../partials/header-standalone') %>

<div class="mb-6">
    <a href="/zones" class="text-blue-600 hover:text-blue-700 flex items-center mb-4">
        <i class="fas fa-arrow-left mr-2"></i>
        Back to Zones
    </a>
    <div class="flex items-center justify-between">
        <div>
            <h3 class="text-2xl font-bold text-gray-800"><%= zone.name %></h3>
            <p class="text-gray-600 mt-1">
                <span class="badge badge-<%= zone.status === 'active' ? 'success' : 'warning' %> mr-2">
                    <%= zone.status %>
                </span>
                <%= zone.type %> zone • <%= records.length %> records
            </p>
        </div>
        <div class="flex items-center space-x-2">
            <a href="/records/zone/<%= zone.name %>/new" class="btn btn-primary">
                <i class="fas fa-plus mr-2"></i>
                Add Record
            </a>
            <button onclick="reloadBindZone()" class="btn">
                <i class="fas fa-sync-alt mr-2"></i>
                Reload Zone
            </button>
        </div>
    </div>
</div>

<% if (typeof error !== 'undefined' && error) { %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
        <%= error %>
    </div>
<% } %>

<% if (typeof success !== 'undefined' && success) { %>
    <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded mb-4">
        <%= success %>
    </div>
<% } %>

<!-- Zone Information -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
    <div class="stat-card">
        <p class="text-sm font-medium text-gray-600 uppercase mb-2">Total Records</p>
        <p class="text-3xl font-bold text-gray-900"><%= records.length %></p>
    </div>
    <div class="stat-card">
        <p class="text-sm font-medium text-gray-600 uppercase mb-2">Zone Type</p>
        <p class="text-2xl font-bold text-gray-900"><%= zone.type %></p>
    </div>
    <div class="stat-card">
        <p class="text-sm font-medium text-gray-600 uppercase mb-2">Last Modified</p>
        <p class="text-lg font-bold text-gray-900"><%= moment(zone.lastModified).format('DD MMM YYYY') %></p>
    </div>
</div>

<!-- Records List -->
<div class="content-card">
    <h4 class="text-lg font-semibold text-gray-800 mb-4">DNS Records</h4>
    
    <% if (records.length === 0) { %>
        <div class="text-center py-12">
            <i class="fas fa-list text-gray-400 text-5xl mb-4"></i>
            <p class="text-gray-600">No records found for this zone</p>
            <a href="/records/zone/<%= zone.name %>/new" class="btn btn-primary mt-4">
                <i class="fas fa-plus mr-2"></i>
                Add First Record
            </a>
        </div>
    <% } else { %>
        <div class="overflow-x-auto">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Value</th>
                        <th>TTL</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% records.forEach(record => { %>
                        <tr>
                            <td class="font-semibold text-gray-900"><%= record.name %></td>
                            <td>
                                <span class="badge badge-info"><%= record.type %></span>
                            </td>
                            <td class="text-gray-700"><%= record.value %></td>
                            <td class="text-gray-600"><%= record.ttl %></td>
                            <td>
                                <div class="flex items-center space-x-2">
                                    <a href="/records/<%= zone.name %>/<%= record.name %>/<%= record.type %>/edit" class="btn btn-sm" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="POST" action="/records/<%= zone.name %>/<%= record.name %>/<%= record.type %>/delete" class="inline" onsubmit="return confirm('Delete <%= record.name %> (<%= record.type %>) record?');">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    <% } %>
</div>

<script>
async function reloadBindZone() {
    if (confirm('Reload Bind DNS configuration?')) {
        try {
            const response = await fetch('/zones/reload', { method: 'POST' });
            const data = await response.json();
            if (data.success) {
                alert('✓ Bind reloaded successfully');
            } else {
                alert('✗ Failed to reload: ' + data.error);
            }
        } catch (error) {
            alert('✗ Error: ' + error.message);
        }
    }
}
</script>

<%- include('../partials/footer-standalone') %>

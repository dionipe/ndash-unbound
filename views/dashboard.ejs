<%- include('partials/header-standalone') %>

<!-- Quick Actions -->
<div class="mb-6">
    <h3 class="text-lg font-semibold text-gray-800 mb-4">Quick Actions</h3>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
        <a href="/zones/new/create" class="quick-action-card">
            <i class="fas fa-plus-circle text-3xl text-blue-600 mb-2"></i>
            <span class="text-sm font-medium text-gray-700">Create Zone</span>
        </a>
        <a href="/zones" class="quick-action-card">
            <i class="fas fa-globe text-3xl text-green-600 mb-2"></i>
            <span class="text-sm font-medium text-gray-700">View Zones</span>
        </a>
        <a href="#" class="quick-action-card">
            <i class="fas fa-list text-3xl text-purple-600 mb-2"></i>
            <span class="text-sm font-medium text-gray-700">All Records</span>
        </a>
        <button onclick="reloadBind()" class="quick-action-card cursor-pointer">
            <i class="fas fa-sync-alt text-3xl text-orange-600 mb-2" id="reload-icon"></i>
            <span class="text-sm font-medium text-gray-700">Reload Bind</span>
        </button>
        <a href="#" class="quick-action-card">
            <i class="fas fa-chart-line text-3xl text-indigo-600 mb-2"></i>
            <span class="text-sm font-medium text-gray-700">Statistics</span>
        </a>
        <a href="#" class="quick-action-card">
            <i class="fas fa-cog text-3xl text-gray-600 mb-2"></i>
            <span class="text-sm font-medium text-gray-700">Settings</span>
        </a>
    </div>
</div>

<!-- Statistics Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
    <!-- Total Zones -->
    <div class="stat-card">
        <div class="flex items-center justify-between mb-4">
            <div>
                <p class="text-sm font-medium text-gray-600 uppercase">DNS Zones</p>
                <p class="text-3xl font-bold text-gray-900 mt-2"><%= stats.totalZones %></p>
            </div>
            <div class="stat-icon bg-blue-100">
                <i class="fas fa-globe text-blue-600 text-2xl"></i>
            </div>
        </div>
        <div class="flex items-center text-sm">
            <span class="text-green-600 font-medium flex items-center">
                <i class="fas fa-check-circle mr-1"></i>
                <%= stats.activeZones %> Active
            </span>
            <span class="ml-2 text-gray-500">• All zones operational</span>
        </div>
    </div>

    <!-- Total Records -->
    <div class="stat-card">
        <div class="flex items-center justify-between mb-4">
            <div>
                <p class="text-sm font-medium text-gray-600 uppercase">DNS Records</p>
                <p class="text-3xl font-bold text-gray-900 mt-2"><%= stats.totalRecords %></p>
            </div>
            <div class="stat-icon bg-green-100">
                <i class="fas fa-list text-green-600 text-2xl"></i>
            </div>
        </div>
        <div class="flex items-center text-sm">
            <span class="text-green-600 font-medium">All configured</span>
            <a href="/zones" class="ml-auto text-blue-600 hover:text-blue-700">View All →</a>
        </div>
    </div>

    <!-- Record Types -->
    <div class="stat-card">
        <div class="flex items-center justify-between mb-4">
            <div>
                <p class="text-sm font-medium text-gray-600 uppercase">Record Types</p>
                <p class="text-3xl font-bold text-gray-900 mt-2"><%= Object.keys(recordsByType).length %></p>
            </div>
            <div class="stat-icon bg-purple-100">
                <i class="fas fa-layer-group text-purple-600 text-2xl"></i>
            </div>
        </div>
        <div class="flex items-center text-sm text-gray-600">
            <% Object.entries(recordsByType).slice(0, 3).forEach(([type, count], index) => { %>
                <%= index > 0 ? '• ' : '' %><%= type %>: <%= count %>
            <% }); %>
        </div>
    </div>

    <!-- System Status -->
    <div class="stat-card">
        <div class="flex items-center justify-between mb-4">
            <div>
                <p class="text-sm font-medium text-gray-600 uppercase">System Status</p>
                <p class="text-3xl font-bold text-green-600 mt-2">
                    <i class="fas fa-check-circle"></i>
                </p>
            </div>
            <div class="stat-icon bg-green-100">
                <i class="fas fa-server text-green-600 text-2xl"></i>
            </div>
        </div>
        <div class="flex items-center text-sm">
            <span class="text-green-600 font-medium">Operational</span>
            <span class="ml-2 text-gray-500">• No issues</span>
        </div>
    </div>
</div>

<!-- Recent Zones and Activities -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Recent Zones -->
    <div class="content-card">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-800 flex items-center">
                <i class="fas fa-globe mr-2 text-blue-600"></i>
                Recent DNS Zones
            </h3>
            <a href="/zones" class="text-sm text-blue-600 hover:text-blue-700 font-medium">View All →</a>
        </div>
        
        <div class="space-y-3">
            <% if (zones.length === 0) { %>
                <div class="text-center py-8 text-gray-500">
                    <p>No zones found. <a href="/zones/new/create" class="text-blue-600 hover:underline">Create your first zone</a></p>
                </div>
            <% } else { %>
                <% zones.forEach(zone => { %>
                    <div class="zone-item">
                        <div class="flex items-center justify-between">
                            <div class="flex-1">
                                <div class="flex items-center space-x-2">
                                    <h4 class="font-semibold text-gray-900"><%= zone.name %></h4>
                                    <span class="badge badge-<%= zone.status === 'active' ? 'success' : 'warning' %>">
                                        <%= zone.status %>
                                    </span>
                                </div>
                                <p class="text-sm text-gray-600 mt-1">
                                    <i class="fas fa-list text-gray-400"></i>
                                    <%= zone.records %> records • 
                                    <span class="text-gray-500"><%= zone.type %></span>
                                </p>
                            </div>
                            <a href="/zones/<%= zone.name %>" class="btn btn-sm">
                                <i class="fas fa-eye"></i>
                            </a>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>

    <!-- Recent Activities -->
    <div class="content-card">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-800 flex items-center">
                <i class="fas fa-history mr-2 text-purple-600"></i>
                Recent Activities
            </h3>
            <a href="#" class="text-sm text-blue-600 hover:text-blue-700 font-medium">View All →</a>
        </div>
        
        <div class="space-y-3">
            <% activities.forEach(activity => { %>
                <div class="activity-item">
                    <div class="flex items-start space-x-3">
                        <div class="activity-icon">
                            <i class="fas fa-<%= activity.action.includes('Created') ? 'plus' : activity.action.includes('Modified') ? 'edit' : 'info' %>"></i>
                        </div>
                        <div class="flex-1">
                            <p class="text-sm font-medium text-gray-900"><%= activity.action %></p>
                            <p class="text-sm text-gray-600"><%= activity.description %></p>
                            <p class="text-xs text-gray-500 mt-1">
                                <%= moment(activity.timestamp).fromNow() %> • <%= activity.user %>
                            </p>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

<script>
function reloadBind() {
    const icon = document.getElementById('reload-icon');
    icon.classList.add('fa-spin');
    
    fetch('/zones/reload', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        }
    })
    .then(response => response.json())
    .then(data => {
        icon.classList.remove('fa-spin');
        if (data.success) {
            // Show success message
            const message = document.createElement('div');
            message.className = 'fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50';
            message.innerHTML = '<i class="fas fa-check-circle mr-2"></i>' + data.message;
            document.body.appendChild(message);
            
            // Remove message after 3 seconds
            setTimeout(() => {
                message.style.opacity = '0';
                message.style.transition = 'opacity 0.5s';
                setTimeout(() => message.remove(), 500);
            }, 3000);
        }
    })
    .catch(error => {
        icon.classList.remove('fa-spin');
        // Show error message
        const message = document.createElement('div');
        message.className = 'fixed top-4 right-4 bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg z-50';
        message.innerHTML = '<i class="fas fa-exclamation-circle mr-2"></i>Failed to reload Bind';
        document.body.appendChild(message);
        
        setTimeout(() => {
            message.style.opacity = '0';
            message.style.transition = 'opacity 0.5s';
            setTimeout(() => message.remove(), 500);
        }, 3000);
    });
}
</script>

<%- include('partials/footer-standalone') %>
